<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ff9800"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mighty Lunatics Quiz"
        android:id="@+id/textView"
        android:layout_weight="0.43"
        android:textSize="40dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:id="@+id/GameButton"
        android:src="@color/buttonDefaultColor"
        android:clickable="true"
        android:onClick="startGameActivity"
        android:enabled="true"
        android:text="Game Mode"
        android:background="#EF6C00" />

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:id="@+id/TrainingButton"
        android:src="@color/buttonDefaultColor"
        android:clickable="true"
        android:onClick="startTrainingActivity"
        android:enabled="true"
        android:text="Training Mode"
        android:background="#EF6C00" />

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:id="@+id/highscore"
        android:src="@color/buttonDefaultColor"
        android:clickable="true"
        android:onClick="showHighscore"
        android:enabled="true"
        android:text="Highscore"
        android:background="#EF6C00"
        android:layout_gravity="bottom" />

</LinearLayout>
